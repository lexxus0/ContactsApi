              }
            }
          },
          "500": {
            "description": "Server error."
          }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "operationId": "createContact",
        "summary": "Create a new contact",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["name", "phoneNumber"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Oleksii"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "example": 123113355
                  },
                  "email": {
                    "type": "string",
                    "example": "oleksii@example.com"
                  },
                  "isFavourite": {
                    "type": "boolean",
                    "example": true
                  },
                  "contactType": {
                    "type": "string",
                    "enum": ["work", "home", "personal"],
                    "example": "personal"
                  },
                  "photo": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact created successfully",
            "content": {
              "application/json": {
                "example": {
                  "status": 201,
                  "message": "Successfully created a contact!",
                  "data": {
                    "name": "contact",
                    "phoneNumber": "1231231212",
                    "isFavourite": false,
                    "contactType": "personal",
                    "userId": "670834b0fcbdc3d8f1b5b009",
                    "_id": "670bfe7b51f30909a5174d36",
                    "createdAt": "2024-10-13T17:08:11.785Z",
                    "updatedAt": "2024-10-13T17:08:11.785Z",
                    "id": "670bfe7b51f30909a5174d36",
                    "page": 1,
                    "perPage": 10,
                    "totalItems": 0,
                    "totalPages": 0,
                    "hasNextPage": true,
                    "hasPreviousPage": false
                  }
                }
              }
            }
          },
          "400": {
            "description": "Contact create failed",
            "content": {
              "application/json": {
                "example": {
                  "status": 400,
                  "message": "BadRequestError",
                  "data": {
                    "message": "Bad Request",
                    "errors": [
                      {
                        "message": "\"phoneNumber\" with value \"123123123\" fails to match the required pattern: /^[0-9]{10,15}$/",
                        "path": ["phoneNumber"],
                        "type": "string.pattern.base",
                        "context": {
                          "regex": {},
                          "value": "123123123",
                          "label": "phoneNumber",
                          "key": "phoneNumber"
                        }
                      }
                    ]
                  }
                }
              }
            }
          },
          "401": {
            "description": "Missing header with authorization token",
            "content": {
              "application/json": {
                "example": {
                  "status": 401,
                  "message": "UnauthorizedError",
                  "data": {
                    "message": "Session not found"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
