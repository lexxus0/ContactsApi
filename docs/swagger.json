  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "operationId": "registerUser",
        "summary": "Register a new user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegistration"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "example": {
                  "status": 201,
                  "message": "Successfully registered a user!",
                  "data": {
                    "name": "Oleksii",
                    "email": "oleksii@example.com",
                    "_id": "670bb07661d02f82f21ab999",
                    "createdAt": "024-10-13T11:35:18.404Z",
                    "updatedAt": "024-10-13T11:35:18.404Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "status": 400,
                  "message": "BadRequestError",
                  "data": {
                    "message": "Bad Request",
                    "errors": [
                      {
                        "message": "\"password\" is required",
                        "path": ["password"],
                        "type": "any.required",
                        "context": {
                          "label": "password",
                          "key": "password"
                        }
                      }
                    ]
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email in use",
            "content": {
              "application/json": {
                "example": {
                  "status": 409,
                  "message": "ConflictError",
                  "data": {
                    "message": "Email in use"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "operationId": "loginUser",
        "summary": "Login user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "example": {
                  "status": 200,
                  "message": "Successfully logged in an user!",
                  "data": {
                    "accessToken": "sD5E+jdfyhoaySJe2ikJA0iuhN0eO8OnTGSM7RHh"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Login failed",
            "content": {
              "application/json": {
                "example": {
                  "status": 400,
                  "message": "BadRequestError",
                  "data": {
                    "message": "Bad Request",
                    "errors": [
                      {
                        "message": "\"password\" length must be at least 8 characters long",
                        "path": ["password"],
                        "type": "string.min",
                        "context": {
                          "limit": 8,
                          "value": "145678",
                          "label": "password",
                          "key": "password"
                        }
                      }
                    ]
                  }
                }
              }
            }
          },
          "401": {
            "description": "Missing header with authorization token.",
            "content": {
              "application/json": {
                "example": {
                  "status": 401,
                  "message": "UnauthorizedError",
                  "data": {
                    "message": "Session not found"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/auth/send-reset-email": {
